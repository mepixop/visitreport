<!DOCTYPE html>
<html>
  <header>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
  </header>
  <body>
    <!-- <p>This is the Visit Reports page for {{user.username}}.</p> -->
        {{> header}}
          <ul>
            <li><a href="/visit-report/form">New Visit Report</a></li>
          </ul>
        </p>
        <hr />
        <p>
          <h3>Visit Reports</h3>
          <table class="table table-striped">
            <tr>
              <th>id</th>
              <th>Topic</th>
              <th>Status</th>
              <th>Type</th>
              <th>Start</th>
              <th>End</th>
              <th>outcome</th>
              <th>primaryContact</th>
              <th>notes</th>
              <th>tasks</th>
              <th>attendees</th>
            </tr>
            {{#each reports}}
            <tr>
              <td>{{id}}</td>
              <td>{{topic}}</td>
              <td>{{status}}</td>
              <td>{{type}}</td>
              <td>{{startTime}}</td>
              <td>{{endTime}}</td>
              <td>{{outcome}}</td>
              <td>{{primaryContact.name}}</td>
              <td>{{notes}}</td>
              <td>
              {{#each tasks}}
                <div>{{description}}</div>
              {{/each}}
             </td>   
             <td>
              {{#each attendees}}
                <div>{{name}}</div>
              {{/each}}
             </td>   
            </tr>
            {{/each}}
          </table>
        </p>
  </body>
</html>